#
# tuned configuration
#

[main]
include="<%= node['dynamic-perf']['network_throughput_include'] %>"

[sysctl]
# Increase kernel buffer size maximums.  Currently this seems only necessary at 40Gb speeds.
#
# The buffer tuning values below do not account for any potential hugepage allocation.
# Ensure that you do not oversubscribe system memory.
net.ipv4.tcp_rmem="<%= node['dynamic-perf']['network_throughput_net_ipv4_tcp_rmem'] %>"
net.ipv4.tcp_wmem="<%= node['dynamic-perf']['network_throughput_net_ipv4_tcp_wmem'] %>"
net.ipv4.udp_mem="<%= node['dynamic-perf']['network_throughput_net_ipv4_udp_mem'] %>"
