#
# tuned configuration
#

[main]
include="<%= node['dynamic-perf']['virtual_host_include'] %>"

[sysctl]
# Start background writeback (via writeback threads) at this percentage (system
# default is 10%)
vm.dirty_background_ratio = "<%= node['dynamic-perf']['virtual_host_vm_dirty_background_ratio'] %>"

# The total time the scheduler will consider a migrated process
# "cache hot" and thus less likely to be re-migrated
# (system default is 500000, i.e. 0.5 ms)
kernel.sched_migration_cost_ns = "<%= node['dynamic-perf']['virtual_host_kernel_sched_migration_cost_ns'] %>"
